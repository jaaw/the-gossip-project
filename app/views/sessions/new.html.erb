<div class="card text-center mb-3">
  <div class="card-body">
 <div class="container">
<%= form_tag url_for(action: 'create'), method: "post" do %>
    <input type="hidden" name="authenticity_token" value= <%= form_authenticity_token %> >
    <br />
    <div class="row justify-content-center align-self-center mx-5">
      <div class="col-3">
      <%= label_tag 'Email' %>
      </div>
      <div class="col-3">
      <%= text_field_tag 'user_email', value = @user_email, options = {style:"height:30px;width:300px"} %> 
    </div>     
    <br />
    <div class="row justify-content-center align-self-center mx-5">
      <div class="col-3">
        <%= label_tag 'Mot de passe' %>
      </div>
      <div class="col-3">
        <%= text_field_tag 'user_password', value = @user_password, options = {style:"height:30px;width:300px"}%>
      </div>
    </div>
    <br />
    <%= submit_tag "Valider", class: 'btn btn-dark btn-lg btn-submit'  %>
  <% end %>
</div>
</div>
  </div>