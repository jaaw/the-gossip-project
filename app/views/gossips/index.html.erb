<div class="card text-center mb-3">
  <div class="card-body">
  <% if @gossip !=nil%>
  <div class="card bg-light text-dark font-weight-bold">
      <%= "Votre Gossip a bien été enregistré" %>
  </div>
  <%end%>
  <a class="btn btn-dark" <%= link_to "Soumettre un Gossip", new_gossip_path%></a>
  </div>
</div>
<section>
<div class="card-deck">
<%Gossip.all.each do |gossips|%>
<div class="col-sm-4 mb-3">
<div class="card">
  <div class="card-header">
    @gossips #<%=gossip.id%>
  </div>
  <div class="card-body align-center">
    <blockquote class="blockquote mb-0">
      <p><%=gossip.title%></p>
      <footer class="blockquote-footer">
      <div class="row justify-content-between align-self-center mx-3">
      	<p><%=User.find(gossip.user_id).first_name%> <%=User.find(gossip.user_id).last_name%></p>
      	<a class="btn btn-dark" <%= link_to "Voir", gossip_path(gossip.id)%></a>
      </div>
      </footer>
    </blockquote>
  </div>
</div>
</div>
<%end%>
</div>
</section>